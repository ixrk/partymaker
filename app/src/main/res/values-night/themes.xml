<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PartyMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/space_cadet</item>
        <item name="colorPrimaryVariant">@color/space_cadet_darker</item>
        <item name="colorOnPrimary">@color/lavender_blush</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tangerine</item>
        <item name="colorSecondaryVariant">@color/tangerine</item>
        <item name="colorOnSecondary">@color/space_cadet_darker</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="materialButtonStyle">@style/customButtonStyle</item>
        <item name="textInputStyle">@style/CustomOutlinedBox</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_night</item>
    </style>

    <style name="Theme.PartyMaker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Theme.PartyMaker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PartyMaker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:timePickerStyle">@style/TimePickerClockStyle</item>
    </style>

    <style name="TimePickerClockStyle" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="CustomOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_color_night</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/persian_indigo</item>
        <item name="colorPrimaryDark">@color/persian_indigo_darker</item>
        <item name="colorAccent">@color/magenta_pantone</item>
        <item name="colorButtonNormal">@color/magenta_pantone</item>
        <item name="colorControlNormal">@color/pastel_purple</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/main_backgr_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="FirebaseUI.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
