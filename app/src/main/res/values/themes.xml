<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PartyMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/persian_indigo</item>
        <item name="colorPrimaryVariant">@color/persian_indigo_darker</item>
        <item name="colorOnPrimary">@color/eggshell</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/magenta_pantone</item>
        <item name="colorSecondaryVariant">@color/magenta_pantone_darker</item>
        <item name="colorOnSecondary">@color/eggshell</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/CustomFloatingButtonStyle</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textInputStyle">@style/CustomOutlinedBox</item>
    </style>


    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_day</item>
    </style>

    <style name="Theme.PartyMaker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorSecondary</item>
        <item name="android:textColor">@color/eggshell</item>
    </style>

    <style name="CustomFloatingButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorButtonNormal">?attr/colorSecondary</item>
        <item name="android:textColor">@color/eggshell</item>
    </style>

    <style name="Theme.PartyMaker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PartyMaker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/colorSecondary</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/persian_indigo</item>
        <item name="colorPrimaryDark">@color/persian_indigo_darker</item>
        <item name="colorAccent">@color/magenta_pantone</item>
        <item name="colorButtonNormal">@color/magenta_pantone</item>
        <item name="colorControlNormal">@color/pastel_purple</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/main_backgr_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="FirebaseUI.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke_color_day</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
    </style>
</resources>
